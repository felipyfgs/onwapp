# Database Configuration
DATABASE_URL="postgresql://zpwoot:zpwoot123@localhost:5432/zpwoot?schema=public"

# Server Configuration
PORT=3000

# Logging Configuration
# Log level: trace, debug, info, warn, error, fatal
