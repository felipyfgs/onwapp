# PostgreSQL Configuration (for Docker)
POSTGRES_USER=zpwoot
POSTGRES_PASSWORD=zpwoot123
POSTGRES_DB=zpwoot

# API Configuration
API_KEY=your-api-key-here

# Environment
NODE_ENV=development
