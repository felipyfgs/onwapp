# =============================================================================
# ZPWoot Configuration
# =============================================================================

# Database (required)
DATABASE_URL=postgres://zpwoot:zpwoot@localhost:5432/zpwoot?sslmode=disable

# Server
PORT=3000
SERVER_URL=http://localhost:3000

# Authentication
# Global API key for full access to all sessions (admin level)
# Each session also gets its own API key for session-specific access
# Header format: Authorization: <your-api-key>
GLOBAL_API_KEY=your-secret-key-here

# Logging
LOG_LEVEL=info
LOG_FORMAT=console

# =============================================================================
# MinIO/S3 Storage (optional - for media storage)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=zpwoot
MINIO_SECRET_KEY=zpwoot123
MINIO_BUCKET=zpwoot-media
MINIO_USE_SSL=false
# MINIO_PUBLIC_URL=https://s3.example.com  # Optional: public URL for media files

# =============================================================================
# NATS Queue (optional - for reliable message delivery)
# =============================================================================
NATS_ENABLED=false
NATS_URL=nats://localhost:4222
NATS_STREAM_PREFIX=ZPWOOT
NATS_MAX_RETRIES=3
NATS_RETRY_DELAY=5s

# =============================================================================
# Debug Options
# =============================================================================
DEBUG_HISTORY_SYNC=false
