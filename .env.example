# =============================================================================
# ZPWoot Configuration
# =============================================================================

# Database (required)
DATABASE_URL=postgres://zpwoot:zpwoot@localhost:5432/zpwoot?sslmode=disable

# Server
PORT=3000
API_KEY=your-api-key-here
SERVER_URL=http://localhost:3000

# Logging
LOG_LEVEL=info
LOG_FORMAT=console

# =============================================================================
# MinIO/S3 Storage (optional - for media storage)
# =============================================================================
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=zpwoot
MINIO_SECRET_KEY=zpwoot123
MINIO_BUCKET=zpwoot-media
MINIO_USE_SSL=false

# =============================================================================
# NATS Queue (optional - for reliable message delivery)
# =============================================================================
NATS_ENABLED=false
NATS_URL=nats://localhost:4222
NATS_STREAM_PREFIX=ZPWOOT
NATS_MAX_RETRIES=3
NATS_RETRY_DELAY=5s

# =============================================================================
# Debug Options
# =============================================================================
DEBUG_HISTORY_SYNC=false
