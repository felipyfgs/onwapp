# ================================
# OnWapp Production Environment
# ================================
# Copy to .env.prod and fill with your values
# Usage: docker compose -f docker-compose.prod.yaml --env-file .env.prod up -d

# ================================
# Version Control
# ================================
VERSION=1.0.0
GIT_COMMIT=abc123
BUILD_DATE=2025-12-08

# ================================
# Ports
# ================================
API_PORT=8080
PAINEL_PORT=3000
POSTGRES_PORT=5432
NATS_PORT=4222
NATS_HTTP_PORT=8222
MINIO_PORT=9000
MINIO_CONSOLE_PORT=9001

# ================================
# Database (PostgreSQL)
# ================================
POSTGRES_USER=onwapp
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
POSTGRES_DB=onwapp

# ================================
# NATS JetStream
# ================================
# Uses default settings (no auth for now)

# ================================
# MinIO / S3
# ================================
MINIO_ROOT_USER=onwapp
MINIO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
S3_ENDPOINT=minio:9000
S3_BUCKET=onwapp-media
S3_USE_SSL=false
S3_PUBLIC_URL=http://localhost:9000

# ================================
# Security
# ================================
# Generate with: openssl rand -hex 32
GLOBAL_API_KEY=CHANGE_ME_GLOBAL_API_KEY_HERE
JWT_SECRET=CHANGE_ME_JWT_SECRET_HERE

# ================================
# WhatsApp
# ================================
WA_LOG_LEVEL=INFO

# ================================
# Frontend
# ================================
NEXT_PUBLIC_API_URL=http://localhost:8080
