# =============================================================================
# ONWAPP CONFIGURATION - SECURITY TEMPLATE
# =============================================================================
# IMPORTANT: Copy this file to .env and fill with your secure values
# NEVER commit .env file to version control
# Generate strong passwords/keys using: openssl rand -hex 32
# =============================================================================

# Database Configuration
# Use strong password (min 16 chars, mixed case, numbers, symbols)
DATABASE_URL=postgres://onwapp:CHANGE_ME_STRONG_PASSWORD@localhost:5432/onwapp?sslmode=require

# Server Configuration
PORT=8080
LOG_LEVEL=info
LOG_FORMAT=json

# Timezone
TZ=America/Sao_Paulo

# API Security
# Generate with: openssl rand -hex 32
GLOBAL_API_KEY=GENERATE_WITH_openssl_rand_hex_32

# Server URL (use HTTPS in production)
SERVER_URL=https://your-domain.com

# Allowed Origins for CORS (comma-separated, no wildcards in production)
ALLOWED_ORIGINS=https://your-domain.com,https://admin.your-domain.com

# MinIO Configuration (S3-compatible storage)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=CHANGE_ME_ACCESS_KEY
MINIO_SECRET_KEY=GENERATE_WITH_openssl_rand_hex_32
MINIO_BUCKET=onwapp-media
MINIO_USE_SSL=true
MINIO_PUBLIC_URL=https://storage.your-domain.com

# Debug (disable in production)
DEBUG_HISTORY_SYNC=false

# NATS Configuration (Message Queue)
NATS_URL=nats://localhost:4222
NATS_ENABLED=true
NATS_STREAM_PREFIX=ONWAPP
NATS_MAX_RETRIES=5
NATS_RETRY_DELAY=5s
NATS_ACK_WAIT=30s

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_SECOND=10
RATE_LIMIT_BURST=20

# Security Settings
ENABLE_SECURITY_HEADERS=true
TRUSTED_PROXIES=127.0.0.1
